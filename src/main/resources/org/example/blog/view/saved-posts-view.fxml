<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.blog.controller.SavedPostsController"
            prefWidth="780" prefHeight="460"
            stylesheets="@styles.css">

    <!-- ========== TOP: Back + Title ========== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>

            <Button text="← Назад"
                    onAction="#handleBackToReader"/>

            <Label text="Сохранённые записи"
                   styleClass="header-label"/>
        </HBox>
    </top>

    <!-- ========== CENTER: Table in card ========== -->
    <center>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="0" right="15" bottom="10" left="15"/>
            </padding>

            <VBox spacing="8"
                  VBox.vgrow="ALWAYS"
                  styleClass="card">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Ваши сохранённые записи"
                       styleClass="label-section"/>

                <TableView fx:id="postTable"
                           prefHeight="320"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTitle"
                                     text="Заголовок"
                                     prefWidth="260"/>
                        <TableColumn fx:id="colAuthor"
                                     text="Автор"
                                     prefWidth="160"/>
                        <TableColumn fx:id="colTopic"
                                     text="Тема"
                                     prefWidth="160"/>
                        <TableColumn fx:id="colCreatedAt"
                                     text="Дата создания"
                                     prefWidth="160"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ========== BOTTOM: Unsave button ========== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="8" right="20" bottom="12" left="10"/>
            </padding>

            <Button text="Удалить из сохраненных"
                    onAction="#handleUnsave"
                    styleClass="button-accent"/>
        </HBox>
    </bottom>

</BorderPane>
